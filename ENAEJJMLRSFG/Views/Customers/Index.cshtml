@model IEnumerable<ENAEJJMLRSFG.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista De Clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nueva Lista</a>
</p>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.FirstName</td>
                    <td>@customer.LastName</td>
                    <td>@customer.Email</td>
                    <td>@customer.Phone</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Customer Actions">
                            <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-sm btn-primary">Editar</a>
                            <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-sm btn-info">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-sm btn-danger" onclick="return confirm('Seguro que quieres hacer esto?')">Eliminar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
