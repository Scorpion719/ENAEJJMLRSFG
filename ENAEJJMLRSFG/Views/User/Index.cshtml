@model IEnumerable<ENAEJJMLRSFG.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-action="Index" method="get">
    <div class="form-group col-md-5">
        <label class="control-label">UserName</label>
        <input type="text" name="UserName" class="form-control" />
    </div>
    <div class="form-group col-md-5">
        <div class="form-group col-md-3">
            <label class="control-label">Status</label>
            <select name="Status" class="form-control">
                <option value="0">Seleccionar</option>
                <option value="1">Activo</option>
                <option value="2">Inactivo</option>
            </select>
        </div>
        <div class="form-group col-md-3">
            <label class="control-label">Cantidad Reg.</label>
            <select name="Take" class="form-control">
                <option value="2">2</option>
                <option selected value="10">10</option>
                <option value="20">20</option>
            </select>
        </div>
   </div>
        <div class="row">
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
                <a asp-action="Create">Crear Usuario</a>
            </div>
        </div>
</form>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    @if (item.Status == 1)
                    {
                        <span>Activo</span>
                    }
                    else
                    {
                        <span>Inactivo</span>
                    }
            </td>
            <td>
                    @if(item.Image != null && item.Image.Length > 0)
                    {
                        <img class="bloque d mx-auto redondeado" src="data:image/jpg;base64,@(Convert.ToBase64String(item.Image))" style="max-width: 100px; max-height: 100px;">
                    }
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.Name)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a class="btn btn-warning" asp-action="Delete" asp-route-id="@item.Id">DEliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
