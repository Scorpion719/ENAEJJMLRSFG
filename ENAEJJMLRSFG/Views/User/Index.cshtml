@model IEnumerable<ENAEJJMLRSFG.Models.User>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
            margin-top: 50px;
        }

        h1 {
            color: #007bff;
        }

        table {
            margin-top: 20px;
        }

        th, td {
            vertical-align: middle !important;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .user-image {
            max-width: 100px;
            max-height: 100px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Index</h1>

        <form asp-action="Index" method="get">
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label class="control-label">UserName</label>
                    <input type="text" name="UserName" class="form-control" />
                </div>
                <div class="form-group col-md-5">
                    <label class="control-label">Status</label>
                    <select name="Status" class="form-control">
                        <option value="1">Activo</option>
                        <option value="2">Inactivo</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
                <a asp-action="Create" class="btn btn-success">Crear Usuario</a>
            </div>
        </form>

        <table class="table">
            <thead>
                <tr>
                    <th>UserName</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Image</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>
                            @if (item.Status == 1)
                            {
                                <span>Activo</span>
                            }
                            else
                            {
                                <span>Inactivo</span>
                            }
                        </td>
                        <td>
                            @if (item.Image != null && item.Image.Length > 0)
                            {
                                <img class="user-image" src="data:image/jpg;base64,@(Convert.ToBase64String(item.Image))" alt="User Image">
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Role.Id)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
