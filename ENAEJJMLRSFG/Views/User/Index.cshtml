@model IEnumerable<ENAEJJMLRSFG.Models.User>

@{
    ViewData["Title"] = "Index";
}

<style>
    .user-card {
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .user-card:hover {
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            transform: translateY(-5px);
        }

        .user-card img {
            max-width: 100%;
            height: auto;
            max-height: 150px; /* Tamaño máximo de la imagen */
            margin-bottom: 10px;
        }
</style>

<h1>Index</h1>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="user-card">
                    <div>
                        <h5>@item.UserName</h5>
                        <p><strong>Email:</strong> @item.Email</p>
                        <p><strong>Status:</strong> @if (item.Status == 1)
                            {
                                <span>Activo</span>
                            }
                            else
                            {
                                <span>Inactivo</span>
                            }</p>
                        @if (item.Image != null && item.Image.Length > 0)
                        {
                            <img src="data:image/jpg;base64,@(Convert.ToBase64String(item.Image))" alt="User Image" class="img-fluid" />
                        }
                        <p><strong>Role:</strong> @item.Role.Name</p>
                    </div>
                    <div>
                        <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                        <a class="btn btn-warning btn-sm" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
