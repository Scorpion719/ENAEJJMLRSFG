@model ENAEJJMLRSFG.Models.User

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #333;
            margin-top: 50px;
        }

        h1 {
            color: #dc3545;
            text-align: center;
            margin-bottom: 30px;
        }

        h3 {
            color: #6c757d;
            text-align: center;
        }

        .container {
            max-width: 600px;
            margin: auto;
        }

        .row {
            margin-bottom: 20px;
        }

        .btn-delete {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-delete:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .btn-back {
            background-color: #007bff;
            border-color: #007bff;
            color: #fff;
        }

            .btn-back:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Delete</h1>

        <h3>Are you sure you want to delete this?</h3>

        <div class="row">
            <div class="col-sm-2">Username:</div>
            <div class="col-sm-10">@Model.UserName</div>
        </div>

        <div class="row">
            <div class="col-sm-2">Email:</div>
            <div class="col-sm-10">@Model.Email</div>
        </div>

        <div class="row">
            <div class="col-sm-2">Status:</div>
            <div class="col-sm-10">@Model.Status</div>
        </div>

        <div class="row">
            <div class="col-sm-2">Role:</div>
            <div class="col-sm-10">@Model.Role.Id</div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-sm-12 text-center">
                    <button type="submit" class="btn btn-delete">Delete</button>
                    <a asp-action="Index" class="btn btn-back">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</body>
</html>